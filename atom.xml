---
layout: null
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <link rel="hub" href="https://pubsubhubbub.appspot.com"/>

  <title>{{ site.name }}</title>
  <link href="http://theboldreport.net"/>
  <link type="application/atom+xml" rel="self" href="http://theboldreport.net/atom.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://theboldreport.net</id>
  <author>
    <name>Tim Smith</name>
    <email>smith@ttimsmith.com</email>
  </author>

  {% for post in site.posts %}
    <entry>
      <id>http://theboldreport.net{{ post.id }}</id>
      {% if post.custom_type == 'link' %}
        <link type="text/html" rel="alternate" href="{{ post.link_url }}"/>
      {% else %}
        <link type="text/html" rel="alternate" href="http://theboldreport.net{{ post.url }}"/>
      {% endif %}
      <title>{% if post.custom_type == 'post' %}♨ {{ post.title | xml_escape }} {% else %} {{ post.title | xml_escape }} →{% endif %}</title>
      <published>{{ post.date | date_to_xmlschema }}</published>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <author>
        <name>Tim Smith</name>
        <uri>http://ttimsmith.com/</uri>
      </author>
      <content type="html">
        <![CDATA[
          {{ post.content }}

          {% if post.custom_type == 'link' %}
            <div><a title="Permalink" href="{{ site.url | xml_escape }}{{ post.url | xml_escape }}">∞</a></div>
          {% endif %}
        ]]>
      </content>
    </entry>
  {% endfor %}

</feed>
